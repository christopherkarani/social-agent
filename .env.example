# Bluesky Crypto Agent Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Required)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
BLUESKY_USERNAME=your_bluesky_username_here
BLUESKY_PASSWORD=your_bluesky_password_here

# Scheduling Configuration (Optional)
POSTING_INTERVAL_MINUTES=30
MAX_EXECUTION_TIME_MINUTES=25

# Content Settings (Optional)
MAX_POST_LENGTH=300
CONTENT_THEMES=Bitcoin,Ethereum,DeFi,NFTs,Altcoins,Crypto News

# Quality Control Settings (Optional)
MIN_ENGAGEMENT_SCORE=0.7
DUPLICATE_THRESHOLD=0.8
MAX_RETRIES=3

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/bluesky_agent.log

# Docker Configuration (Optional)
CONTAINER_NAME=bluesky-crypto-agent
RESTART_POLICY=unless-stopped